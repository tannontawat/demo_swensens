@section Styles
{
    <style>
        .icon_product {
            width: 120px;
            cursor: pointer;
        }

        .col-md-1 {
            min-width: 88px;
        }

        @@media (min-width: 1200px) {
            .product-md {
                display: flex;
            }

            .product-sm {
                display: none;
            }
        }

        @@media (max-width: 576px) {
            .product-md {
                display: none;
            }

            .product-sm {
                display: flex;
            }
        }

        .member-card-bg {
            background: linear-gradient(to right, rgba(210, 7, 24, 1) 0%, rgba(157, 5, 18, 1) 100%);
        }

        .member-card-pic {
            -ms-transform: rotate(-10deg);
            -webkit-transform: rotate( -10deg );
            transform: rotate( -10deg );
            margin-top: 20px;
            border: 5px solid #fff;
            -webkit-border-radius: 25px;
            -moz-border-radius: 25px;
            border-radius: 25px;
            -webkit-box-shadow: 0px 0px 15px 0px rgb(0 0 0 / 75%);
            -moz-box-shadow: 0px 0px 15px 0px rgba(0,0,0,0.75);
            box-shadow: 0px 0px 15px 0px rgb(0 0 0 / 75%);
        }

        .img-responsive {
            display: block;
            max-width: 70%;
            height: auto;
        }

        .img-col {
            width: 85px;
        }

        .member-priviledge {
            color: #fff;
            font-size: 1em;
            line-height: 1.1em;
            margin: 10px;
        }
    </style>
}

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('.icon_product').hover(function () {
                $(this).css('width', 140);
            }, function () {
                $(this).css('width', 120);
            });
        });
    </script>
}
